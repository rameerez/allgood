<style>
  header {
    min-height: 20vh;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    background-color: <%= @status == "ok" ? "MediumSeaGreen" : "FireBrick" %> !important;
    font-weight: bold;
    font-size: 2.7rem;
    margin-bottom: 1em;
  }

  .check {
    margin: 0.5em 0;
  }

  .skipped {
    opacity: 0.6;
  }
</style>

<header>
  <h1><%= @status == "ok" ? "ü§ô It's all good" : "‚ùå Something's wrong" %></h1>
</header>

<% if @results.any? %>
  <% @results.each do |result| %>
    <div class="check <%= 'skipped' if result[:skipped] %>">
      <% if result[:skipped] %>
        ‚è≠Ô∏è
      <% else %>
        <%= result[:success] ? "‚úÖ" : "‚ùå" %>
      <% end %>
      <b><%= result[:name] %></b>: <i><%= result[:message] %></i> 
      <% unless result[:skipped] %>
        <code>[<%= result[:duration] %>ms]</code>
      <% end %>
    </div>
  <% end %>
<% else %>
  <p>No health checks were run. Please check your configuration.</p>
<% end %>
